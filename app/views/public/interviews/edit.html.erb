<div class="container">
    <div class="row">
        <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
            <h2>内容を編集する</h2>
            　　<%= form_with model: @interview, url: public_interview_path(@interview.id) do |f| %>
            　　<div class="form_group">
            　　      <label for="inputTitle">タイトル</label>
            　       <%= f.text_field :title, autofocus: true, class:"form_control", placeholder: "title" %>
            　　</div>
            　　<div class="form_group">
            　　      <label for="inputImage">内容</label>
            　　      <%= f.text_area :body, class:"form-control", placeholder: "body" %>
            　　</div>
            　　<div>
            　　      <%= f.submit "編集を確定する" , class: "btn btn-secondary" %>
            　　      <%= link_to "キャンセル", public_interview_path(@interview.id) %>
            　　</div>
            　　<% end %>
        </div>
    </div>
</div>
