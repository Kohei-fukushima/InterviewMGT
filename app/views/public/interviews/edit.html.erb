<div class="container">
    <div class="row">
        <div class="col-md-4">
            <h4 class="my-3">内容を編集する</h4>
            　　<%= form_with model: @interview, url: public_interview_path(@interview.id) do |f| %>
            　　<div class="form_group">
            　　      <label for="inputTitle">タイトル</label>
            　       <%= f.text_field :title, autofocus: true, class: "form-control", placeholder: "title" %>
            　　</div>
            　　<div class= "form_group">
            　　      <label for="InputSchedule">予定時刻</label>
            　　      <%= f.datetime_field :schedule, class: "form-control", placeholder: "schedule" %>
            　　</div>
            　　<div class="form_group ml-4">
                    <label for="inputTag">タグ</label>
                    <div style="display: grid;">
                    <%= f.collection_check_boxes(:tag_ids, Tag.all, :id, :name) do |tag| %>
                       <%= tag.label do %>
                         <%= tag.check_box %>
                         <%= tag.text %>
                       <% end %>
                      <% end %>
                    </div>
                </div>
                <div class="mt-3">
            　　      <%= f.submit "編集を確定する" , class: "btn btn-secondary" %>
            　　      <%= link_to "キャンセル", public_interview_path(@interview.id) %>
                </div>
        </div>
        <div class="col-md-8 mt-5">
            <label for="inputBody">内容</label>
            <div class="form_group">

            　　      <%= f.text_area :body, cols:"70", rows:"20", placeholder: "body" %>
            </div>
            <% end %>
        </div>
    </div>
</div>
