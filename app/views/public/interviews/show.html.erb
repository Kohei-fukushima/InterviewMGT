<div class="container">
	<div class="row">
		<div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
			<h4 class="my-3">インタビュー内容詳細</h4>
  			<table class="table table-hover table-inverse mt-3">
  				<table class="table table-hover table-inverse mt-3">
  				    <tr>
  					    <td>作成日時</td>
  					    <td><%= @interview.created_at.strftime('%Y/%m/%d') %></td>
  					</tr>
  					<tr>
  						<td>タイトル</td>
  						<td><%= @interview.title %></td>
  					</tr>
  					<tr>
  					    <td>タグ</td>
  					    <td><% @interview.tags.each do |tag| %>
  					        <%= tag.name %>
  					        <% end %></td>
  					</tr>
  					<tr>
  						<td>内容</td>
  						<td><%= @interview.body%></td>
  					</tr>
  					<tr>
  					    <td>内容確認</td>
                        <td>
                          <% if @interview.favorited_by?(current_user) %>
                          <%= link_to public_interview_favorites_path(@interview), method: :delete do %>
                            ♥<%= @interview.favorites.count %>
                          <% end %>
                        </td>
                        <% else %>
                        <td>
                          <%= link_to public_interview_favorites_path(@interview), method: :post do %>
                            ♡<%= @interview.favorites.count %>
                          <% end %>
                        </td>
                        <% end %>
  					</tr>

  			</table>
		</div>
	</div>
	<div class="row">
		<div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
		    <%= link_to "マイページに戻る", public_interviews_path %>
		    <%= link_to " 編集する", edit_public_interview_path(@interview.id), class: "btn btn-sm btn-success" %>
		    <% if @interview.user == current_user %>
            <%= link_to "削除", public_interview_path(@interview), method: :delete %>
            <% end %>
		</div>
	</div>
</div>
