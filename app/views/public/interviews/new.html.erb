<div class="container">
    <div class="row">
        <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
          <table class="table table-hover table-inverse mt-3">
            <h4 class="my-md-5">新規インタビュー作成</h4>
            <% if @interview.errors.any? %>
              <%= @interview.errors.count %>件のエラーが発生しました
              <ul>
                <% @interview.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
                <% end %>
              </ul>
            <% end %>
              <%= form_with model: @interview, url: interviews_path, method: :post do |f| %>
  			    <tr>
  				    <td>予定日時</td>
  				    <td><%= f.datetime_field :schedule %></td>
  				</tr>
  				<tr>
  					<td>タイトル</td>
  					<td><%= f.text_field :title %></td>
  				</tr>
  				<tr>
  				    <td>タグ</td>
  				    <td><%= f.collection_check_boxes(:tag_ids, Tag.all, :id, :name) do |tag| %>
                    　<div>
                       <%= tag.label do %>
                         <%= tag.check_box %>
                         <%= tag.text %>
                       <% end %>
                      <% end %>
             　        </div>
             　      </td>
  				</tr>
  				<tr>
  					<td>内容</td>
  					<td><%= f.text_area :body, size: "40x15" %></td>
  				</tr>
  				<tr>
  				<tr>
  				    <td></td>
  				    <td>
                     <%= f.submit '確定する' %>
                    </td>
  				</tr>
  			</table>
  			 <% end %>
        </div>
    </div>
</div>

