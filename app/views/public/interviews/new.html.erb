<h1>新しいインタビューを作成する</h1>

  <%= form_with model: @interview, url: public_interviews_path, method: :post do |f| %>
    <h4>インタビュー名</h4>
      <%= f.text_field :title %>
      <h4>予定日時</h4>
      <%= f.datetime_field :schedule %>
    <h4>タグ</h4>
    <%= f.collection_check_boxes(:tag_ids, Tag.all, :id, :name) do |tag| %>
    　<div>
       <%= tag.label do %>
         <%= tag.check_box %>
         <%= tag.text %>
       <% end %>
      <% end %>
     　</div>
    <h4>内容</h4>
      <%= f.text_area :body %>
    <%= f.submit '確定する' %>
  <% end %>
