   <%= render 'public/users/info', user: @user %>
    <h4>マイページ</h4>
    <table class = "table">
        <thread>
            <tr>
                <th>インタビューID</th>
                <th>ホスト名</th>
                <th>インタビュー名</th>
                <th>タグ</th>
                <th>
                    <%= form_tag public_interviews_path, method: :get, class: 'boards__searchForm' do %>
                    <%= select_tag :tag_id, options_from_collection_for_select(Tag.all, :id, :name, params[:tag_id]),
                     {
                       prompt: 'タグで絞り込み検索',
                       onchange: 'submit(this.form);'
                     } %>
                    <% end %>
                </th>
            </tr>
        </thread>
        <tbody>
            <% @interviews.each do |interview| %>
            <tr>
                <td><%= interview.id %></td>
                <td><%= interview.user.name %></td>
                <td><%= link_to interview.title, public_interview_path(interview) %></td>
  			　　<td><% interview.tags.each do |tag| %>
  				　　<%= tag.name %>
  		　　　　　　<% end %></td>
            </tr>
            <% end %>
        </tbody>
    </table>



