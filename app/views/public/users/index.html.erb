<div class="container">
  <div class="row d-flex justify-content-center">
    <div class="col-10 mt-5">
      <h1>ユーザー一覧</h5>
      <table class = "table text-center">
        <thread>
            <tr>
                <th>User Image</th>
                <th>User Name</th>
                <th>User Group</th>
                <th>following</th>
            </tr>
        </thread>
        <tbody>
            <% @users.each do |user| %>
              <tr>
                  <td><%= image_tag user.get_profile_image( 100,100 ) %></td>
                  <td><%= link_to user.name, public_user_path(user) %></td>
                  <td><%= user.group %></td>
                  <td>
                    <% if user != current_user %>
                      <% if user.is_followed_by?(current_user) %>
                        <%=link_to public_user_relationships_path(user), method: :delete do %>
                          <button type="button" class="btn btn btn-danger">フォロー解除</button>
                        <% end %>
                      <% else %>
                        <%=link_to public_user_relationships_path(user), method: :post do %>
                          <button type="button" class="btn btn btn-primary">フォロー</button>
                        <% end %>
                      <% end %>
                    <% end %>
                  </td>
              </tr>
            <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>