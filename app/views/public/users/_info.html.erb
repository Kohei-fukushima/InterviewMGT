<h4 class="mt-3">My profile</h4>
<div class="mt-3">
    <%= image_tag user.get_profile_image(150, 150) %>
</div>
<table class="table mt-2">
 <tbody><tr></tr>
  <tr>
　　  <th>name</th>
     <th><%= link_to user.name, user_path(user.id) %></th>
    </tr>
    <tr>
        <th>group</th>
        <th><%= user.group %></th>
    </tr>
    <tr>
       <th>introduction</th>
       <th><%= user.introduction %></th>
    </tr>
    <tr>
       <th>参加済み</th>
       <th><%= link_to "会議一覧", favorites_user_path(user) %></th>
    </tr>
    <tr>
       <th>followers</th>
       <th><%= link_to user.followers.count, followers_user_path(user) %></th>
    </tr>
    <tr>
       <th>followings</th>
       <th><%= link_to user.followings.count, followings_user_path(user) %></th>
    </tr>
  </tbody>
</table>
