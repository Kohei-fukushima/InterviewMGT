<div class="container">
	<div class="row">
		<div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
			<h4 class="my-3">My Profile</h4>
			<%= link_to " 編集する", edit_public_user_path(@user.id), class: "btn btn-sm btn-success" %>
            <div class="field">
            <%#= image_tag @user.get_profile_image( 100,100 ) %>
            </div>

			<table class="table table-hover table-inverse mt-3">
				<table class="table table-hover table-inverse mt-3">
					<tr>
						<td>氏名</td>
						<td><%= @user.name %></td>
					</tr>
					<tr>
						<td>所属グループ</td>
						<td><%= @user.group%></td>
					</tr>
					<tr>
						<td>紹介文</td>
						<td><%= @user.introduction %></td>
			        </tr>
			</table>
		</div>
	</div>
	<div class="row">
		<div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
		    <%= link_to "マイページに戻る", public_interviews_path %>
			<%= link_to "退会する", public_users_quit_path, class: "btn btn-sm btn-primary mb-3" %>
		</div>
	</div>
</div>



