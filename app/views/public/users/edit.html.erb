<div class="container">
    <div class="row">
        <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
            <h2>プロフィールを作成しましょう</h2>
            　　<%= form_with model: @user, url:public_user_path(current_user) do |f| %>
            　　<div class="form_group">
            　　      <label for="inputName">Name</label>
            　       <%= f.text_field :name, autofocus: true, class:"form_controll", placeholder:"名前" %>
            　　</div>
            　　<div class="form_group">
            　　      <label for="inputImage">Image</label>
            　　      <%= f.file_field :profile_image, class:"form-control-file user_image", placeholder: "プロフィール画像", accept: "image/*" %>
            　　</div>
            　　<div class="form_group">
            　　      <label for="inputGroup">Group</label>
            　　      <%= f.text_field :group, class:"form_control", placeholder: "所属グループ" %>
            　　</div>
            　　<div class="form_group">
            　　      <label for="inputIntroduction">Introduction</label>
            　　      <%= f.text_area :introduction, class:"form_control", placeholder: "自己紹介文" %>
            　　</div>
            　　<div>
            　　      <%= f.submit "登録する", class: "btn btn-secondary" %>
            　　</div>
            　　<% end %>
        </div>
    </div>
</div>