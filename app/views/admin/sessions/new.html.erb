<div class="container">
    <div class="form">
        <h1 class="h3 mb-3 font-weight-normal">Log in</h1>
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <label for="inputEmail" class="sr-only">Email address</label>
            <%= f.email_field :email, autofocus: true, class: "form-control", autocomplete: "email", placeholder: "Email address" %>

        <label for="inputPassword" class="sr-only">Password</label>
            <%= f.password_field :password, class: "form-control", autocomplete: "current-password" , placeholder: "passowrd" %>

        <% if devise_mapping.rememberable? %>
        <div class="checkbox my-3">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
        </div>

            <%= f.submit "Log in", class: "btn btn-lg btn-primary btn-block " %>
        <% end %>
    </div>
        <% end %>
</div>